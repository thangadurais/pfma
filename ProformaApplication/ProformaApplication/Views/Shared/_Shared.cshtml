<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#language-trigger').click(function () { $('#language-content').toggle(); })
        });
    </script>
</head>
<body>
    <div id="wrapper">
        <div id="header" class="content-box">
            <img alt="Logo" src="//ssl.gstatic.com/images/logos/google_logo_41.png" class="logo" />
            <div id="language-box">
                <a class="language-trigger" id="language-trigger"><span>Language</span></a>
                <div id="language-content" style="display: none;">
                    <div class="language-menu-box">
                        @ProformaApplication.Helpers.UIHelper.LanguageMenu()
                    </div>
                </div>
            </div>
        </div>
        <div id="content" class="content-box">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
